<controls:BaseControl x:Class="PackageEasy.Views.Tools.ScriptControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:PackageEasy.Controls.Controls;assembly=PackageEasy.Controls"
             xmlns:local="clr-namespace:PackageEasy.Views.Tools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox IsReadOnly="True" IsReadOnlyCaretVisible="True" BorderBrush="Transparent" BorderThickness="0" FocusVisualStyle="{x:Null}" PreviewMouseWheel="doc_PreviewMouseWheel" x:Name="doc"  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
        </TextBox>
    </Grid>
</controls:BaseControl>
